{% extends "base.html.twig" %}
{% block title %}{{sujet.titre}}{{parent()}}{% endblock %}

{% block content %}
<div class="container-fluid text-center bg-light border-dark border-bottom p-4">
	
	<h2>{{sujet.titre}}</h2>
	<p class="m-0">Un sujet lancé le {{sujet.date}} par {{sujet.userName}} <img src="{{sujet.userImage}}" alt="" class="img-profile-redacteur mb-1 rounded-circle"></p>
</div>

{% if sujet.idUser == session.id %}
<!--BAR-->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
	<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarArticle">
		<span class="navbar-toggler-icon"></span>
	</button>
	<div class="collapse navbar-collapse" id="navbarArticle">
    <div class="navbar-nav">
		<a href="" class="nav-link active text-danger">Supprimer la discution</a>
		<a href="" class="nav-link active text-danger">Fermer la discution</a>
    </div>
	</div>
</nav>
{% endif %}

<div class="container mt-3">
	<div class="m-2">{{sujet.contenu | nl2br}}</div>
	<hr class="bg-dark">
	<h3 class="mb-3"><b>Réponses ({{form.nb_reponse}})</b></h3>

	{% if session.id is defined %}
	<form action="?page=addReponse" method="POST" class="bg-light p-3 mb-3">
		<div class="form-group">
			<textarea type="text" class="form-control form-control-sm" id="reponse" placeholder="Saisissez votre réponse ici ..." name="reponse" rows="3"></textarea>
		</div>
		<input hidden name="idSujet" value="{{sujet.id}}" />
		<button type="submit" class="btn btn-outline-primary btn-sm" name="btRepondre">Répondre</button>
	</form>
	{% endif %}

	<div class="container">
	<form action="?page=removeReponse" method="POST">
	{% for r in reponses %}
		{% if r.userImage is null %}{% set img = "images/default/profil.png" %}{% else %}{% set img = "images/profil/#{r.userImage}" %}{% endif %}
		<div class="row align-items-center bg-light p-2 mb-2 border-bottom border-secondary">
			<!-- USER info -->
			<div class="col-3">
				<p class="m-0">
				<img class="img-thumbnail" src="{{img}}" alt="image profil" style="width:60px;height:60px;">
				{% if r.idUser == sujet.idUser %}
					<a class="bg-primary text-white rounded d-inline"><b>{{r.userName}}</b></a>
				{% else %}
					<a><b>{{r.userName}}</b></a>
				{% endif %}
				<br>
				<a>Le {{r.date | date("d F Y à G:i")}}</a>
				</p>
			</div>
			<!-- CONTENT -->
			<div class="col-7">
				<p>{{r.contenu | nl2br}}</p>
			</div>
			<!-- UPDATE AND REMOVE BUTTON -->
			<div class="col-2">
			{% if r.idUser == session.id %}
				<!-- remove button -->
				<button type="submit" value="{{r.id}}" name="btSupprimer" class="btn btn-outline-danger btn-sm">Effacer</button>
			{% endif %}
			</div>
		</div>
	{% endfor %}
	</form>
	</div>

</div>
{% endblock %}