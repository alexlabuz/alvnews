{% extends "base.html.twig" %}
{% block title %}Inscritption{{parent()}} {% endblock %}

{% block content %}
	<h1>Inscription</h1>

	{% if form.message is defined %}
		<div class="message-block red">{{form.message}}</div>
	{% endif %}

	<form method="POST" action="index.php?page=inscription" class="form-membre">
		<div class="input-text">
			<label for="email">Adresse email</label>
			<input type="email" id="email" name="email" required/>
		</div>
		<div class="input-text">
			<label for="nom">Nom</label>
			<input type="text" id="nom" name="nom" maxlength="50" required/>
		</div>
		<div class="input-text">
			<label for="password">Mot de passe</label>
			<input type="password" id="password" name="password" required/>
			<input type="password" id="password2" name="password2" required/>
		</div>
		<div class="input-text">
			<label for="image">Photo de profil</label>
			<input type="file" id="image" name="image"/>
		</div>

		<button type="submit" name="btInscrire" class="button">Valider</button>
	</form>
{% endblock %}