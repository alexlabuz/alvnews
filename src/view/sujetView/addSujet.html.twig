{% extends "base.html.twig" %}
{% block title %}Nouveau sujet{{parent()}}{% endblock %}

{% block content %}

{% if form.errorMessage %}
	
<div class="alert alert-danger m-3" role="alert">
	{{form.errorMessage}}
</div>
{% else %}
<div class="container">
<h1 class="mt-3 mb-3 text-secondary">Nouveau sujet</h1>

<form action="?page=addSujet" method="POST">
  	<div class="form-group">
    	<label for="title">Titre *</label>
    	<input type="text" class="form-control" id="title" name="title" required>
  	</div>

	<div class="form-group">
		<label for="content">Sujet *</label>
		<textarea class="form-control" id="content" name="content" rows="6" required></textarea>
	</div>

  	<button type="submit" class="btn btn-primary" name="btEnvoyer">Envoyer</button>
</form>

</div>
{% endif %}

{% endblock %}