{% extends "base.html.twig" %}
{% block title %}Connexion{{parent()}}{% endblock %}

{% block head %}
<style>
html, body, .baseDiv, .log_in{height: 100%;}
</style>
{% endblock %}

{% block content %}
<div class="log_in bg-light">
	<h1 class="mb-4">Connexion</h1>
	{% if form.message is defined %}
		{% if get.code <= 0 %}
			<div class="alert alert-success block-custom" role="alert">{{form.message}}</div>
		{% else %}
			<div class="alert alert-danger block-custom" role="alert">{{form.message}}</div>
		{% endif %}
	{% endif %}
	<form method="POST" action="index.php?page=connexion" class="p-4 bg-white border border-dark rounded block-custom jsAnimateLoadForm">
		<div class="form-group">
			<label for="email">Adresse email</label>
			<input type="text" class="form-control" id="email" name="email" required />
		</div>
		<div class="form-group">
			<label for="password">Mot de passe</label>
			<input type="password" class="form-control" id="password" name="password" required/>
		</div>
		<div class="form-check">
			<input class="form-check-input" type="checkbox" name="resteConnecte" id="resteConnecte" >
			<label class="form-check-label" for="resteConnecte">Conserver la connexion</label>
		</div>

		<div class="row mt-3">
			<div class="col-sm-4 align-self-center"><button type="submit" name="btConnecter" class="btn btn-primary">Se connecter</button></div>
			<div class="col-sm-5 align-self-center pl-0"><p class="mb-0"><a href="?page=forgotPassword">Mot de passe oublié ?</a></p></div>
		</div>
	</form>

	<p class="m-3">Tu n'as pas de compte ? pas de problème <a href="?page=inscription">inscrit-toi maintenant !</a></p>
	<a href="./">Retour à l'accueil du site</a> 
</div>

<!-- SCRIPT -->
<script src="js/loadingButton.js"></script>
{% endblock %}